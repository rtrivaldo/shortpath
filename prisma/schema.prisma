generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Link {
  id        String   @id @default(cuid())
  shortLink String   @unique
  longLink  String
  clicks    Int
}

